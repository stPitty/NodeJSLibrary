<%- include("../partials/layout-start", {title: title}) %>
<%- include("../partials/layout-menu") %>
<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-6">
        <form method="POST" class="mt-5">
            <div class="form-group">
                <label for="inputTitle">Заголовок</label>
                <input type="text"
                       value="<%= book.title %>"
                       name="title"
                       class="form-control"
                       id="inputTitle">
            </div>
            <div class="form-group">
                <label for="inputDesc">Описание</label>
                <textarea
                        rows="3"
                        name="description"
                        class="form-control"
                        id="inputDesc"
                ><%= book.description %></textarea>
            </div>
            <div class="form-group">
                <label for="inputAuthors">Автор</label>
                <input type="text"
                       value="<%= book.authors %>"
                       name="authors"
                       class="form-control"
                       id="inputAuthors">
            </div>
            <div class="form-group">
                <label for="inputFavorite">Favorite</label>
                <input type="text"
                       value="<%= book.favorite %>"
                       name="favorite"
                       class="form-control"
                       id="inputFavorite">
            </div>
            <div class="form-group">
                <label for="inputFileCover">Обложка</label>
                <input type="text"
                       value="<%= book.fileCover %>"
                       name="fileCover"
                       class="form-control"
                       id="inputFileCover">
            </div>
            <div class="form-group">
                <label for="inputFileName">Название файла</label>
                <input type="text"
                       value="<%= book.fileName %>"
                       name="fileName"
                       class="form-control"
                       id="inputFileName">
            </div>
            <div class="form-group">
                <label for="inputFileBook">Путь к файлу книги</label>
                <input type="text"
                       value="<%= book.fileBook %>"
                       name="fileBook"
                       class="form-control"
                       id="inputFileBook">
            </div>
            <div class="form-group text-right ">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </form>
    </div>
</div>

<%- include("../partials/layout-end") %>